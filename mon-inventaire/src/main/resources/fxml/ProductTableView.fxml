<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.monsite.inventaire.controller.ProductTableController" spacing="10" padding="10">


    <Label text="Liste des produits" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    
    <TableView fx:id="productTable" prefHeight="400">
        <columns>
            <TableColumn text="Code" fx:id="codeColumn"/>
            <TableColumn text="Nom" fx:id="nameColumn"/>
            <TableColumn text="Marque" fx:id="brandColumn"/>
            <TableColumn text="Catégorie" fx:id="categoryColumn"/>
            <TableColumn text="Quantité" fx:id="quantityColumn"/>
            <TableColumn text="Nutri-Score" fx:id="nutriScoreColumn"/>
            <TableColumn text="Eco-Score" fx:id="ecoScoreColumn"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button text="Ajouter" onAction="#handleAdd"/>
        <Button text="Modifier" onAction="#handleEdit"/>
        <Button text="Supprimer" onAction="#handleDelete"/>
    </HBox>
</VBox>
